<main>

    <section class="actions">
        <form action="/expenses/refill" method="POST">
            <h2>Salary time? Refill your account amount.</h2>
            <input type="text" id="refill-amount" name="amount">
            <button type="submit">Refill</button>
        </form>
        <div>
            <h2>New expense comming up?</h2>
            <a href="/expenses/add">Add it now</a>
        </div>
    </section>

    <hr class="separator">

    {{#if expenses}}
    <table class="expenses">
        <thead>
            <tr>
                <th>Merchant</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Description</th>
            </tr>

        </thead>
        <tbody>
            {{#each expenses}}
            <tr>
                <td>
                    <p>{{merchant}}</p>
                    {{#if report}}
                    <div class="report">
                        <a href="/expenses/{{_id}}/report">Report</a>
                    </div>
                    {{/if}}
                </td>
                <td>
                    <img src="/images/amount.png" alt="">
                    <p>лв {{total}}</p>
                </td>
                <td>
                    <img src="/images/category.png" alt="">
                    <p>{{category}}</p>
                </td>
                <td>
                    <img src="/images/hastag.png" alt="">
                    <p>{{description}}</p>
                </td>
            </tr>
            {{/each}}

        </tbody>
    </table>
    {{else}}
    <h1 class="no-expenses">No expenses founded so far.. <span>GOOD JOB!</span></h1>
    {{/if}}


</main>